{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "typeRoots": [
      "node_modules/@types",
      "src/types/modules",
      "src/types/utils",
      "src/types/request",
      "src/types/response"
    ]
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
}